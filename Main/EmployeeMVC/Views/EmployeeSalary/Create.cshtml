@model SalaryUpdateDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create Salary Update</h1>

<div class="row">
    <div class="col-md-5">
        <form asp-controller="EmployeeSalary" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class=" text-danger"></div>

            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-Control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="FromDate" class="control-label"></label>
                <input asp-for="FromDate" class="form-Control" min="2020-01-01" max="2025-01-01" />
                <span asp-validation-for="FromDate" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="ToDate" class="control-label"></label>
                <input asp-for="ToDate" class="form-Control" min="2020-01-01" max="2030-01-01" />
                <span asp-validation-for="ToDate" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="New_CTC" class="control-label"></label>
                <input asp-for="New_CTC" class="form-Control" />
                <span asp-validation-for="New_CTC" class="text-danger"></span>

            </div>

            <div class="form-group">
                <input id="button" type="submit" value="Create" class="btn btn-primary " />
            </div>
        </form>
    </div>

</div>



